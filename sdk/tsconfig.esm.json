{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"outDir": "./dist/esm",
		"declaration": false,
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"verbatimModuleSyntax": false
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
